<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".Donations">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/upperredframe"
    />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="@drawable/background_with_border_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.008"
    />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="344dp"
        android:layout_height="78dp"
        android:background="@drawable/rounded_background_title"
        android:elevation="4dp"
        android:fontFamily="sans-serif-medium"
        android:fontWeight="700"
        android:letterSpacing="0"
        android:text="Donaciones"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="52sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16" />


    <Button
        android:id="@+id/mont_donationms"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:background="@drawable/button_background_orange"
        android:fontFamily="sans-serif-black"
        android:foreground="@drawable/button_background_orange"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Mes"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.232" />


    <TextView
        android:id="@+id/textMesDonacion"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:fontFamily="sans-serif-medium"
        android:text="Mes"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/mont_donationms"
        app:layout_constraintEnd_toEndOf="@+id/mont_donationms"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/mont_donationms"
        app:layout_constraintTop_toTopOf="@+id/mont_donationms"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/mont_donationms"
        app:layout_constraintTop_toTopOf="@+id/mont_donationms"
        app:srcCompat="@drawable/arrow_drop_down"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="68dp" />

    <Button
        android:id="@+id/dontations_navbar"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:background="@drawable/button_background_orange"
        android:fontFamily="sans-serif-black"
        android:foreground="@drawable/button_background_orange"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="..."
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.232" />

    <TextView
        android:id="@+id/textNavbarDonaciones"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:fontFamily="sans-serif-medium"
        android:text="..."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dontations_navbar"
        app:layout_constraintEnd_toEndOf="@+id/dontations_navbar"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="@+id/dontations_navbar"
        app:layout_constraintTop_toTopOf="@+id/dontations_navbar"
        app:layout_constraintVertical_bias="0.888" />

    <ProgressBar
        android:id="@+id/progressBarMoney"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="381dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/progress_bar_money"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="321dp"
    />

    <ProgressBar
        android:id="@+id/progressBarMeds"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="381dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:max="100"
        android:progress="30"
        android:progressDrawable="@drawable/progress_bar_meds"
        app:layout_constraintEnd_toEndOf="@+id/progressBarMoney"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/progressBarMoney"
        app:layout_constraintTop_toBottomOf="@+id/progressBarMoney"
        tools:ignore="MissingConstraints"
    />

    <ProgressBar
        android:id="@+id/progressBarFood"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="381dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:max="100"
        android:progress="80"
        android:progressDrawable="@drawable/progress_bar_food"
        app:layout_constraintEnd_toEndOf="@+id/progressBarMoney"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/progressBarMeds"
        app:layout_constraintTop_toBottomOf="@+id/progressBarMeds"
        tools:ignore="MissingConstraints"
        />


</androidx.constraintlayout.widget.ConstraintLayout>